package views

import "time"

templ TimeComponent(d time.Time) {
	<div>{ d.String() }</div>
}

templ NotFoundComponent() {
	<div>404 - Not found</div>
}

templ ResultsComponent(status string, zip string) {
	<div class="flex flex-col items-center justify-center py-5">
		<p class="py-2">{ status }</p>
		<a href="/dl/{ zip }" target="_blank" class="py-2 px-4 bg-blue-500 hover:bg-blue-700 text-white font-bold rounded-lg">
			Download
		</a>
	</div>
}